<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/primary_light</item>
    </style>

    <style name="FullscreenDialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <!-- Custom style for EditText underline color -->
    <style name="EditTextOrangeUnderline" parent="Widget.AppCompat.EditText">
        <item name="colorControlActivated">#DE5B00</item>
        <item name="colorControlNormal">#DE5B00</item>
        <item name="colorControlHighlight">#DE5B00</item>
    </style>
</resources>
